            <StackLayout Grid.Row="0"
                         Spacing="20"
                         Margin="0,40,0,60"
                         VerticalOptions="Start">

                <Border BackgroundColor="{StaticResource Primary}"
                        StrokeShape="RoundRectangle 50"
                        WidthRequest="100"
                        HeightRequest="100"
                        HorizontalOptions="Center">
