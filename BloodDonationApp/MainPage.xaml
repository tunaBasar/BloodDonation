<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BloodDonationApp.MainPage"
             Title="Ana Sayfa">
        <Grid>
                <Image Source="mainpagewallpaper.webp"
                        Aspect="AspectFill"
                        Opacity="0.9"/>
                <StackLayout Padding="30"
                                Spacing="20"
                             VerticalOptions="Center">

                        <Label Text="Giriş Yap"
                               FontSize="32"
                               HorizontalOptions="Center"
                               TextColor="Blue"/>

                        <Button Text="Admin Girişi"
                                Clicked="OnAdminLoginClicked"
                                BackgroundColor="DarkBlue"
                                TextColor="White"
                                CornerRadius="10"/>

                        <Button Text="Kullanıcı Girişi"
                                Clicked="OnUserLoginClicked"
                                BackgroundColor="DarkRed"
                                TextColor="White"
                                CornerRadius="10"/>
                        <Button Text="Kullanici Kayıt"
                                Clicked="OnUserRegister"
                                Background="DarkRed"
                                TextColor="White"
                                CornerRadius="10"/>

                </StackLayout>
        </Grid>
</ContentPage>

