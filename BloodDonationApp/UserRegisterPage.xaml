<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="BloodDonationApp.UserRegisterPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Kullanıcı Kaydı"
             BackgroundColor="{StaticResource Gray100}">

       <ScrollView>
              <StackLayout Padding="20"
                           Spacing="20">

                     <StackLayout Spacing="10"
                                  Margin="0,20,0,30">
                            <Label Text="Hesap Oluştur"
                                   FontSize="28"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="{StaticResource Primary}"/>

                            <Label Text="Kan bağışçısı olmak için kayıt olun"
                                   FontSize="16"
                                   HorizontalOptions="Center"
                                   TextColor="{StaticResource Gray600}"/>
                     </StackLayout>

                     <Frame BackgroundColor="{StaticResource Secondary}"
                            HasShadow="True"
                            CornerRadius="12"
                            Padding="20">
                            <StackLayout Spacing="15">
                                   <Label Text="Kişisel Bilgiler"
                                          FontSize="16"
                                          FontAttributes="Bold"
                                          TextColor="{StaticResource Primary}"/>

                                   <Grid ColumnDefinitions="*,10,*">
                                          <StackLayout Grid.Column="0"
                                                       Spacing="5">
                                                 <Label Text="Ad*"
                                                        FontSize="12"
                                                        FontAttributes="Bold"
                                                        TextColor="{StaticResource Gray600}"/>
                                                 <Entry x:Name="FirstNameEntry"
                                                        Placeholder="Adınız"
                                                        BackgroundColor="Transparent"/>
                                          </StackLayout>

                                          <StackLayout Grid.Column="2"
                                                       Spacing="5">
                                                 <Label Text="Soyad*"
                                                        FontSize="12"
                                                        FontAttributes="Bold"
                                                        TextColor="{StaticResource Gray600}"/>
                                                 <Entry x:Name="LastNameEntry"
                                                        Placeholder="Soyadınız"
                                                        BackgroundColor="Transparent"/>
                                          </StackLayout>
                                   </Grid>

                                   <StackLayout Spacing="5">
                                          <Label Text="E-posta Adresi*"
                                                 FontSize="12"
                                                 FontAttributes="Bold"
                                                 TextColor="{StaticResource Gray600}"/>
                                          <Entry x:Name="EmailEntry"
                                                 Placeholder="ornek@email.com"
                                                 Keyboard="Email"
                                                 BackgroundColor="Transparent"/>
                                   </StackLayout>
                                   <StackLayout Spacing="5">
                                          <Label Text="Türkiye Cumguriyeti Kimlik Numarası*"
                                                 FontSize="11"
                                                 FontAttributes="Bold"
                                                 TextColor="{StaticResource Gray600}"/>
                                          <Entry x:Name="TcEntry"
                                                 Placeholder="xxxxxxxxxxx"
                                                 MaxLength="11"
                                                 Keyboard="Numeric"
                                                 BackgroundColor="Transparent"/>
                                   </StackLayout>

                                   <StackLayout Spacing="5">
                                          <Label Text="Telefon Numarası*"
                                                 FontSize="12"
                                                 FontAttributes="Bold"
                                                 TextColor="{StaticResource Gray600}"/>
                                          <Entry x:Name="PhoneEntry"
                                                 Placeholder="05XX XXX XX XX"
                                                 MaxLength="11"
                                                 Keyboard="Telephone"
                                                 BackgroundColor="Transparent"/>
                                   </StackLayout>
                            </StackLayout>
                     </Frame>

                     <Frame BackgroundColor="{StaticResource Secondary}"
                            HasShadow="True"
                            CornerRadius="12"
                            Padding="20">
                            <StackLayout Spacing="15">
                                   <Label Text="Sağlık Bilgileri"
                                          FontSize="16"
                                          FontAttributes="Bold"
                                          TextColor="{StaticResource Primary}"/>

                                   <StackLayout Spacing="5">
                                          <Label Text="Kan Grubu*"
                                                 FontSize="12"
                                                 FontAttributes="Bold"
                                                 TextColor="{StaticResource Gray600}"/>
                                          <Picker x:Name="BloodTypePicker"
                                                  BackgroundColor="Transparent">
                                                 <Picker.ItemsSource>
                                                        <x:Array Type="{x:Type x:String}">
                                                               <x:String>APositive</x:String>
                                                               <x:String>ANegative</x:String>
                                                               <x:String>BPositive</x:String>
                                                               <x:String>BNegative</x:String>
                                                               <x:String>ABPositive</x:String>
                                                               <x:String>ABNegative</x:String>
                                                               <x:String>OPositive</x:String>
                                                               <x:String>ONegative</x:String>
                                                        </x:Array>
                                                 </Picker.ItemsSource>
                                          </Picker>
                                   </StackLayout>
                            </StackLayout>
                     </Frame>
                     <Frame BackgroundColor="{StaticResource Secondary}"
                            HasShadow="True"
                            CornerRadius="12"
                            Padding="20">
                            <StackLayout Spacing="15">
                                   <Label Text="Güvenlik"
                                          FontSize="16"
                                          FontAttributes="Bold"
                                          TextColor="{StaticResource Primary}"/>

                                   <StackLayout Spacing="5">
                                          <Label Text="Şifre*"
                                                 FontSize="12"
                                                 FontAttributes="Bold"
                                                 TextColor="{StaticResource Gray600}"/>
                                          <Entry x:Name="PasswordEntry"
                                                 Placeholder="En az 6 karakter"
                                                 IsPassword="True"
                                                 BackgroundColor="Transparent"/>
                                   </StackLayout>

                                   <StackLayout Spacing="5">
                                          <Label Text="Şifre Tekrar*"
                                                 FontSize="12"
                                                 FontAttributes="Bold"
                                                 TextColor="{StaticResource Gray600}"/>
                                          <Entry x:Name="ConfirmPasswordEntry"
                                                 Placeholder="Şifrenizi tekrar girin"
                                                 IsPassword="True"
                                                 BackgroundColor="Transparent"/>
                                   </StackLayout>
                            </StackLayout>
                     </Frame>


                     
                     <!-- Kayıt Ol Butonu -->
                     <Button x:Name="RegisterButton"
                             Text="Kayıt Ol"
                             FontSize="16"
                             FontAttributes="Bold"
                             HeightRequest="50"
                             Margin="0,10,0,0"
                             Clicked="OnRegisterButtonClicked"/>

                     <!-- Loading Indicator -->
                     <ActivityIndicator x:Name="LoadingIndicator"
                                        IsVisible="False"
                                        IsRunning="False"
                                        Color="{StaticResource Primary}"
                                        VerticalOptions="Center"/>

                     <!-- Giriş Yapma Linki -->
                     <StackLayout Orientation="Horizontal"
                                  HorizontalOptions="Center"
                                  Spacing="5"
                                  Margin="0,20,0,40">

                            <Label Text="Zaten hesabınız var mı?"
                                   FontSize="14"
                                   TextColor="{StaticResource Gray600}"/>

                            <Label Text="Giriş Yapın"
                                   FontSize="14"
                                   FontAttributes="Bold"
                                   TextColor="{StaticResource Primary}"
                                   TextDecorations="Underline">
                                   <Label.GestureRecognizers>
                                          <TapGestureRecognizer Tapped="OnLoginTapped"/>
                                   </Label.GestureRecognizers>
                            </Label>
                     </StackLayout>
              </StackLayout>
       </ScrollView>
</ContentPage>
