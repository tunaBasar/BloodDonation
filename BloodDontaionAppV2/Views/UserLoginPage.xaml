<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="BloodDonationAppV2.Views.UserLoginPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Kullanıcı Girişi"
             BackgroundColor="{StaticResource Accent}">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">
            
            <Frame BackgroundColor="{StaticResource Secondary}" 
                   CornerRadius="15" 
                   Padding="30"
                   HasShadow="True">
                
                <VerticalStackLayout Spacing="20">
                    
                    <Label Text="Giriş Yap"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="{StaticResource Primary}" />

                    <VerticalStackLayout Spacing="10">
                        <Label Text="TC Kimlik Numarası" 
                               TextColor="{StaticResource Tertiary}"
                               FontAttributes="Bold" />
                        <Entry x:Name="TcEntry"
                               Placeholder="TC Kimlik Numaranızı giriniz"
                               Keyboard="Numeric"
                               MaxLength="11" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="10">
                        <Label Text="Şifre" 
                               TextColor="{StaticResource Tertiary}"
                               FontAttributes="Bold" />
                        <Entry x:Name="PasswordEntry"
                               Placeholder="Şifrenizi giriniz"
                               IsPassword="True" />
                    </VerticalStackLayout>

                    <Button Text="Şifremi Unuttum"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource Primary}"
                            FontSize="14"
                            Clicked="OnForgotPasswordClicked" />

                    <Button x:Name="LoginBtn"
                            Text="Giriş Yap"
                            FontSize="16"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="{StaticResource Secondary}"
                            Clicked="OnLoginClicked" />

                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                        <Label Text="Hesabınız yok mu?" 
                               TextColor="{StaticResource Gray600}" />
                        <Button Text="Kayıt Ol"
                                BackgroundColor="Transparent"
                                TextColor="{StaticResource Primary}"
                                FontSize="14"
                                FontAttributes="Bold"
                                Clicked="OnRegisterClicked" />
                    </StackLayout>

                </VerticalStackLayout>
                
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>