                                                   VerticalOptions="Center" />
                                            <Label Text="ðŸ“…" FontSize="14" VerticalOptions="Center" Margin="20,0,0,0" />
                                            <Label Text="{Binding TarihSaat, StringFormat='{0:dd/MM/yyyy HH:mm}'}" 
