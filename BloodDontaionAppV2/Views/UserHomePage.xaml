        <!-- SaÄŸ Panel - BaÄŸÄ±ÅŸ Ä°stekleri -->
        <VerticalStackLayout Grid.Column="1" Spacing="20" Padding="20">
            
            <!-- BaÅŸlÄ±k ve Arama -->
            <Frame BackgroundColor="{StaticResource Secondary}"
