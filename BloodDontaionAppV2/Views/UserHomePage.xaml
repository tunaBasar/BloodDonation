                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="0,5">
                                <Frame BackgroundColor="{StaticResource Secondary}"
                                       CornerRadius="10"
                                       Padding="15"
                                       HasShadow="True">
                                    
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
