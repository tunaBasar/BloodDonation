<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="BloodDonationAppV2.Views.ForgotPasswordPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Şifremi Unuttum"
             BackgroundColor="{StaticResource Accent}">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30" VerticalOptions="Center">
            
            <Frame BackgroundColor="{StaticResource Secondary}" 
                   CornerRadius="15" 
                   Padding="30"
                   HasShadow="True">
                
                <VerticalStackLayout Spacing="20">
                    
                    <Label Text="Şifremi Unuttum"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="{StaticResource Primary}" />

                    <Label Text="TC Kimlik Numaranızı ve e-mail adresinizi girerek şifrenizi sıfırlayabilirsiniz."
                           FontSize="14"
                           TextColor="{StaticResource Gray600}"
                           HorizontalOptions="Center" />

                    <VerticalStackLayout Spacing="10">
                        <Label Text="TC Kimlik Numarası" 
                               TextColor="{StaticResource Tertiary}"
                               FontAttributes="Bold" />
                        <Entry x:Name="TcEntry"
                               Placeholder="TC Kimlik Numaranızı giriniz"
                               Keyboard="Numeric"
                               MaxLength="11" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="10">
                        <Label Text="E-mail" 
                               TextColor="{StaticResource Tertiary}"
                               FontAttributes="Bold" />
                        <Entry x:Name="EmailEntry"
                               Placeholder="E-mail adresinizi giriniz"
                               Keyboard="Email" />
                    </VerticalStackLayout>

                    <Button x:Name="ResetBtn"
                            Text="Şifre Sıfırlama Linki Gönder"
                            FontSize="16"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="{StaticResource Secondary}"
                            Clicked="OnResetClicked" />

                    <Button Text="Giriş Sayfasına Dön"
                            BackgroundColor="Transparent"
                            TextColor="{StaticResource Primary}"
                            FontSize="14"
                            Clicked="OnBackToLoginClicked" />

                </VerticalStackLayout>
                
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>