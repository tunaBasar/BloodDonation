<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="BloodDonationAppV2.Views.UserRegisterPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Kayıt Ol"
             BackgroundColor="{StaticResource Accent}">

    <ScrollView>
        <VerticalStackLayout Spacing="20" Padding="30">
            
            <Frame BackgroundColor="{StaticResource Secondary}" 
                   CornerRadius="15" 
                   Padding="30"
                   HasShadow="True">
                
                <VerticalStackLayout Spacing="20">
                    
                    <Label Text="Kayıt Ol"
                           FontSize="24"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="{StaticResource Primary}" />

                    <VerticalStackLayout Spacing="10">
                        <Label Text="TC Kimlik Numarası *" 
                               TextColor="{StaticResource Tertiary}"
                               FontAttributes="Bold" />
                        <Entry x:Name="TcEntry"
                               Placeholder="TC Kimlik Numaranızı giriniz"
                               Keyboard="Numeric"
                               MaxLength="11" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="10">
                        <Label Text="Ad *" 
                               TextColor="{StaticResource Tertiary}"
                               FontAttributes="Bold" />
                        <Entry x:Name="FirstNameEntry"
                               Placeholder="Adınızı giriniz" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="10">
                        <Label Text="Soyad *" 
                               TextColor="{StaticResource Tertiary}"
                               FontAttributes="Bold" />
                        <Entry x:Name="LastNameEntry"
                               Placeholder="Soyadınızı giriniz" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="10">
                        <Label Text="E-mail *" 
                               TextColor="{StaticResource Tertiary}"
                               FontAttributes="Bold" />
                        <Entry x:Name="EmailEntry"
                               Placeholder="E-mail adresinizi giriniz"
                               Keyboard="Email" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="10">
                        <Label Text="Kan Grubu *" 
                               TextColor="{StaticResource Tertiary}"
                               FontAttributes="Bold" />
                        <Picker x:Name="BloodGroupPicker"
                                Title="Kan grubunuzu seçiniz">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>A+</x:String>
                                    <x:String>A-</x:String>
                                    <x:String>B+</x:String>
                                    <x:String>B-</x:String>
                                    <x:String>AB+</x:String>
                                    <x:String>AB-</x:String>
                                    <x:String>0+</x:String>
                                    <x:String>0-</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="10">
                        <Label Text="Şifre *" 
                               TextColor="{StaticResource Tertiary}"
                               FontAttributes="Bold" />
                        <Entry x:Name="PasswordEntry"
                               Placeholder="Şifrenizi giriniz"
                               IsPassword="True" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="10">
                        <Label Text="Şifre Tekrar *" 
                               TextColor="{StaticResource Tertiary}"
                               FontAttributes="Bold" />
                        <Entry x:Name="ConfirmPasswordEntry"
                               Placeholder="Şifrenizi tekrar giriniz"
                               IsPassword="True" />
                    </VerticalStackLayout>

                    <Button x:Name="RegisterBtn"
                            Text="Kayıt Ol"
                            FontSize="16"
                            FontAttributes="Bold"
                            HeightRequest="50"
                            BackgroundColor="{StaticResource Primary}"
                            TextColor="{StaticResource Secondary}"
                            Clicked="OnRegisterClicked" />

                    <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                        <Label Text="Zaten hesabınız var mı?" 
                               TextColor="{StaticResource Gray600}" />
                        <Button Text="Giriş Yap"
                                BackgroundColor="Transparent"
                                TextColor="{StaticResource Primary}"
                                FontSize="14"
                                FontAttributes="Bold"
                                Clicked="OnLoginClicked" />
                    </StackLayout>

                </VerticalStackLayout>
                
            </Frame>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>